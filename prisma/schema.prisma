generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id         Int      @id @default(autoincrement())
  firstName  String
  lastName   String
  phone      String   @unique
  email      String   @unique
  nationalId String   @unique
  joinedAt   DateTime @default(now())
}

model Admin {
  id          String    @id @default(uuid())
  name        String
  displayName String
  password    String
  phone       String    @unique
  email       String    @unique
  role        AdminRole
}

model Otp {
  id         String   @id @default(cuid())
  identifier String   @unique
  otpCode    String
  type       OtpType
  expires    DateTime

  @@unique([identifier, otpCode])
}

enum OtpType {
  SMS
  EMAIL
}

enum AdminRole {
  ADMIN
  AUTHOR
  TUTOR
}
